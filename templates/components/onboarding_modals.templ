package components

// Welcome Modal - Shown on first visit
templ WelcomeModal() {
    <div id="welcome-modal" class="hidden fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-[100]" style="backdrop-filter: blur(2px);">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-2xl max-w-md w-full mx-4 transform transition-all">
            <div class="p-8 text-center">
                <div class="mb-6">
                    <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                        Welcome to SUDO!
                    </h2>
                    <p class="text-gray-600 dark:text-gray-300 text-sm">
                        Let's get you set up in under 2 minutes âš¡
                    </p>
                </div>

                <div class="space-y-3 mb-8">
                    <button
                        onclick="startOnboarding()"
                        class="w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all"
                    >
                        Start Quick Tour
                    </button>
                    <button
                        onclick="skipOnboarding()"
                        class="w-full px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors font-medium"
                    >
                        I'll explore myself
                    </button>
                </div>

                <p class="text-xs text-gray-500 dark:text-gray-400">
                    ðŸ’¡ Tip: Press <kbd class="px-2 py-1 text-xs bg-gray-200 dark:bg-gray-600 rounded">Ctrl+Shift+H</kbd> anytime to restart the tour
                </p>
            </div>
        </div>
    </div>
}

